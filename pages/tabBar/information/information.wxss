/* pages/information/information.wxss */
page{
  padding-top: 30rpx;
}
.bannerbox{
  position: relative;
  width: 690rpx;
  height: 350rpx;
  margin: 0 auto 26rpx;
}
.bannerbox image{
  width: 690rpx;
  height: 350rpx;
  border-radius: 22rpx;
}
.dots{
  margin-bottom: 26rpx;
  justify-content: center;
}
.dots>view{
  width: 12rpx;
  height: 12rpx;
  border-radius: 12rpx;
  background: #FFDFE0;
  margin: 0 6rpx;
}
.dots .swiperactive{
  width: 34rpx;
  height: 12rpx;
  border-radius: 12rpx;
  background: linear-gradient(243deg, #FFA275 0%, #FF8059 100%);
}
.scroll{
  width: 750rpx;
  height: 100rpx;
  background: white;
}
.scroll .four{
  font-size: 30rpx;
  color: #929B9C;
  width: max-content;
  height: 100rpx;
}
.scroll .four .one{
  position: relative;
  line-height: 100rpx;
  padding: 0 26rpx;
}
.scroll .four .act{
  color: #ecdc6d;
  font-weight: bold;
  font-size: 36rpx;
}
.ding{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
}
.articles{
  padding: 30rpx 0 120rpx;
  background: #F7F7F7;
}
.articles .actlist{
  width: 690rpx;
  background: #FFFFFF;
  box-shadow: 0rpx 16rpx 32rpx 0rpx rgba(0, 0, 0, 0.04);
  border-radius: 10rpx;
  margin: 0 auto 24rpx;
  overflow: hidden;
}
.articles .actlist .banner{
  width: 690rpx;
  height: 350rpx;
}
.articles .actlist .con{
  padding: 24rpx 30rpx 32rpx;
  color: #55514C;
  font-size: 26rpx;
}
.articles .actlist .title{
  font-size: 30rpx;
  color: #292725;
  font-weight: bold;
  margin-bottom: 16rpx;
  justify-content: flex-start;
}
.articles .actlist .txt{
  font-size: 20rpx;
  color: #A5A5A5;
  margin-left: 16rpx;
}